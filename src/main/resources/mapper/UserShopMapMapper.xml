<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 示例mapper文件 -->
<mapper namespace="com.o2o.shop.mapper.UserShopMapMapper">
    <resultMap id="userShopResultMap"
               type="com.o2o.shop.vo.UserProductMapVO">
        <id column="user_shop_id" property="userProductId"/>
        <result column="create_time" property="createTime" />
        <result column="point" property="point" />
        <association property="user" column="user_id" javaType="com.o2o.shop.model.PersonInfoDO">
            <id column="user_id" property="userId"/>
            <result column="name" property="name"/>
        </association>
        <association property="shop" column="shop_id" javaType="com.o2o.shop.model.ShopDO">
            <id column="shop_id" property="shopId"/>
            <result column="shop_name" property="shopName"/>
        </association>
    </resultMap>


    <select id="queryShopMapPointPage" resultMap="userShopResultMap">
        select
        usm.user_shop_id,
        usm.create_time,
        usm.point,
        buyer.user_id,
        buyer.name,
        s.shop_id,
        s.shop_name
        from
        tb_user_shop_map usm,
        tb_person_info buyer,
        tb_shop s
        <where>
            usm.user_id = buyer.user_id
            and
            usm.shop_id = s.shop_id
            <!-- 按照顾客信息精确查询 -->
            <if test="userShopCondition.user!=null
				and userShopCondition.user.userId!=null">
                and usm.user_id = #{userShopCondition.user.userId}
            </if>
            <!-- 按店铺信息精确查询 -->
            <if test="userShopCondition.shop!=null
				and userShopCondition.shop.shopId!=null">
                and usm.shop_id = #{userShopCondition.shop.shopId}
            </if>
            <!-- 按顾客姓名模糊查询 -->
            <if test="userShopCondition.user!=null
				and userShopCondition.user.name!=null">
                and buyer.name like '%${userShopCondition.user.name}%'
            </if>
            <!-- 按店铺名称模糊查询 -->
            <if test="userShopCondition.shop!=null
			and userShopCondition.shop.shopName!=null">
                and s.shop_name like
                '%${userShopCondition.shop.shopName}%'
            </if>
            <!-- 按照时间的范围查询 -->
            <if test="userShopCondition.createTime!=null">
                and usm.create_time >= #{userShopCondition.createTime}
            </if>
        </where>
        order by create_time desc
    </select>
</mapper>